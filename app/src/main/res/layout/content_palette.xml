<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.chiemy.materialdesigndrawable.PaletteActivity"
    tools:showIn="@layout/activity_palette">

    <TextView
        android:id="@+id/tv_des1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Extract Prominent Colors from an Image with Palette class."
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_des2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_des1"
        android:layout_marginTop="10dp"
        android:drawableRight="@mipmap/ic_launcher"
        android:gravity="center_vertical"
        android:text="Extract Prominent Colors from " />

    <TextView
        android:id="@+id/tv_vibrant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_des2"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="Vibrant color" />

    <TextView
        android:id="@+id/tv_vibrant_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_vibrant"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="Vibrant dark color" />

    <TextView
        android:id="@+id/tv_vibrant_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_vibrant_dark"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="Vibrant light color" />

    <TextView
        android:id="@+id/tv_muted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_vibrant_light"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="Muted color" />

    <TextView
        android:id="@+id/tv_muted_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_muted"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="Muted dark color" />

    <TextView
        android:id="@+id/tv_muted_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_muted_dark"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="Muted light color" />
</RelativeLayout>
