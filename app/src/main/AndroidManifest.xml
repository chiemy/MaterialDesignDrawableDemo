<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chiemy.materialdesigndrawable" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VectorDrawableActivity"
            android:label="@string/title_activity_vector_drawable"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".PaletteActivity"
            android:label="@string/title_activity_palette"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".TintDrawableActivity"
            android:label="@string/title_activity_tint_drawable"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
